<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JUST Online Judge - resister</title>


    <script type="text/javascript" src="javascripts/jquery-2.1.4.min.js"></script>

    <link rel="stylesheet" href="stylesheets/style.css">

    <link rel="stylesheet" href="bootstrap/css/bootstrap.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="bootstrap/css/bootstrap-theme.css">
    <!-- Latest compiled and minified JavaScript -->
    <script type="text/javascript" src="bootstrap/js/bootstrap.min.js"></script>


    <script type="text/javascript" src="javascripts/jquery.validate.js"></script>

    <!-- tooltipster popup plugin -->
    <link rel="stylesheet" href="tooltipster/tooltipster.css">
    <link rel="stylesheet" href="tooltipster/theme/tooltipster-shadow.css">
    <script type="text/javascript" src="tooltipster/js/jquery.tooltipster.min.js" charset="utf-8"></script>



</head>
<body>


<% include templates/header.ejs %>
    <li><a href="/login"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> LOGIN</a></li>
<% include templates/headerend.ejs %>


<script type="text/javascript">
    var RecaptchaOptions = {
        theme : 'clean',
        lang  : 'en'
    };
</script>

<!-- Main Content -->
<div class="container">

    <div class="row-fluid">


        <!-- errors -->
        <% if (errors.length > 0) { %>
            <div class="col-md-6 col-md-offset-2">
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <%= errors %>
                </div>
            </div>
        <% } %>

        <div class="col-md-8">
            <div class="panel panel-default" style="margin-bottom: 150px;border: 0px; ">
                <div class="panel-body">


                    <!-- res Form -->
                    <form method="post" action="#" class="form-horizontal" id="resform">

                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-2">
                                <h3 style="color: #98978B;">RESISTER</h3><br/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="iName" class="col-sm-2 control-label">Name</label>

                            <div class="col-sm-6">
                                <input id="iName" type="text" name="name" class="form-control valpop" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="iUsername" class="col-sm-2 control-label">Username</label>

                            <div class="col-sm-6">
                                <input id="iUsername" type="username" name="username" class="form-control valpop" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="iEmail" class="col-sm-2 control-label">Email</label>

                            <div class="col-sm-6">
                                <input id="iEmail" type="email" name="email" class="form-control valpop" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="iPassword" class="col-sm-2 control-label">Password</label>

                            <div class="col-sm-6">
                                <input id="iPassword" type="password" name="password" class="form-control valpop" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="iConPassword" class="col-sm-2 control-label">Confirm</label>

                            <div class="col-sm-6">
                                <input id="iConPassword" type="password" name="conpassword" class="form-control valpop" />
                            </div>
                        </div>

                        <br>
                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-2">
                                <%- recaptcha_form %>
                            </div>
                        </div>
                        <br>


                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-2">
                                <button type="submit" data-loading-text="Resistering.." class="btn btn-primary">
                                    RESISTER
                                </button>
                            </div>
                        </div>

                    </form>

                    <script type="text/javascript" src="javascripts/validate-form.js"></script>

                </div>
            </div>

        </div>

    </div>

</div>


<!-- footer -->
<% include templates/footer.ejs %>

</body>
</html>