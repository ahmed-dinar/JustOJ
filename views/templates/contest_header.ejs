
<div class="content container c-h">
    <div class="row">
        <div class="col-md-12 nopadding">

            <div class="panel panel-default" style="margin-bottom: 0; box-shadow: none; border-radius: 0;">
                <div class="panel-heading" style="border: none; background-color: #FFFFFF; margin-left: 16px; padding: 0px 15px;">
                    <h3 style="margin-top: 12px;"><%=  decodeToHTML(contest.title) %></h3>
                    <div id="countdown" style="font-size: 18px; font-weight: 200; margin-bottom: 8px;  "></div>
                </div>

                <div class="navbar navbar-default" style="border-radius: 0; min-height: 36px; box-shadow: none; border-right: 0; border-left: 0;">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle"  data-toggle="collapse" data-target=".navbar-contest">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse navbar-contest" >
                        <ul class="nav navbar-nav contest-nav">
                            <li class="<%= active_contest_nav === "problems" ? 'active' : '' %>"><a href="/contest/<%= contest.id %>">Problems</a></li>
                            <li class="<%= active_contest_nav === "clarifications" ? 'active' : '' %>"><a href="/contest/<%= contest.id %>/clarifications/all">Clarifications</a></li>
                            <li class="<%= active_contest_nav === "standings" ? 'active' : '' %>"><a href="/contest/<%= contest.id %>/standings">Standings</a></li>
                            <li class="<%= active_contest_nav === "submissions" ? 'active' : '' %>"><a href="/contest/<%= contest.id %>/submissions">Submissions</a></li>
                        </ul>
                    </div>
                </div>





