<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JUST Online Judge</title>

    <% include ../../templates/head.ejs %>

</head>
<body>


<!-- header and menu -->
<% include ../../templates/header2.ejs %>


<!-- Main Content -->
<div class="content container c-h">

    <div class="row">

        <div class="col-md-12">
            <div class="panel panel-default">

                <% if(success.length){ %>
                <div class="col-md-6 col-md-offset-3">
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <%= success %>
                    </div>
                </div>
                <% } %>

                <div class="panel-body">

                    <% if(contests.length){ %>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Title</th>
                                <th>Starts</th>
                                <th>Status</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(var i=0; i<contests.length; i++){ %>
                                <tr>
                                    <td><%= contests[i].title %></td>
                                    <td><%= moment(contests[i].begin).from() %></td>
                                    <td class="col-sm-1">
                                        <% if(contests[i].status === 0){ %>
                                            <span class="label label-danger">Incomplete</span>
                                        <% }else if(contests[i].status === 1){ %>
                                            <a class="btn btn-xs btn-primary" href="/contest/edit/<%= contests[i].id %>/publish">PUBLISH</a>
                                        <% }else{ %>
                                            <span class="label label-success">PUBLIC</span>
                                        <% } %>
                                    </td>
                                    <td class="col-sm-1"><a class="btn btn-xs btn-primary" href="/contest/edit/<%= contests[i].id %>">EDIT</a></td>



                                    <form method="post" id="del-contest-form" action="/contest/delete" name="delcform" >
                                        <input type="hidden" name="cid" value="" id="cidField" />
                                    </form>

                                    <td class="col-sm-1"><a class="btn btn-xs btn-danger del-contest-btn" data-cid="<%= contests[i].id %>" href="#">DELETE</a></td>

                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    <% } %>


                </div>
            </div>
        </div>



    </div>

</div>

<script type="text/javascript">

    jQuery(document).ready(function(){
        $(document).on('click', '.del-contest-btn', function () {
            var contestId = $(this).attr('data-cid');
            $('#cidField').val( contestId );
            $('#del-contest-form').submit();
        });
    });

</script>


<!-- footer -->
<% include ../../templates/footer.ejs %>

</body>
</html>