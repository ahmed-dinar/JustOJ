<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JUST Online Judge</title>

    <% include ../templates/head.ejs %>

</head>
<body>


<!-- header and menu -->
<% include ../templates/header.ejs %>


<!-- Main Content -->
<div class="content container c-h" >

    <div class="row">

        <div class="col-md-9">
            <div  style="font-family: 'PT Sans', sans-serif;">


                    <h4>Contests</h4>

                    <% if(running.length){ %>
                        <h5 class = "list-group-item grey-back">
                            <i class="fa fa-hourglass-half" aria-hidden="true"></i> Running Contests
                        </h5>
                        <div class = "list-group">
                            <% for(var i=0; i<running.length; i++){ %>
                                <a href = "/contest/<%= running[i].id %>" class = "list-group-item clearfix">
                                    <div class="pull-left contest-list">
                                        <h5 class = "list-group-item-heading"><%= running[i].title %></h5>
                                        <p class = "list-group-item-text">

                                                Ends <%= moment(running[i].end).from() %>

                                        </p>
                                    </div>
                                    <div class="pull-right">
                                        <span class = "badge">
                                            <i class="fa fa-user" aria-hidden="true"></i> x <%= running[i].users %>
                                        </span>
                                    </div>
                                </a>
                            <% } %>
                        </div>
                    <% } %>

                    <% if(future.length){ %>
                        <h5 class = "list-group-item grey-back">
                            <i class="fa fa-hourglass-o" aria-hidden="true"></i> Future Contests
                        </h5>
                        <div class = "list-group">
                            <% for(var i=0; i<future.length; i++){ %>
                            <a href = "/contest/<%= future[i].id %>" class = "list-group-item clearfix">
                                <div class="pull-left contest-list">
                                    <h5 class = "list-group-item-heading"><%= future[i].title %></h5>
                                    <p class = "list-group-item-text">

                                            Starts <%= moment(future[i].begin).from() %>

                                    </p>
                                </div>
                                <div class="pull-right">
                                    <span class = "badge">
                                        <i class="fa fa-user" aria-hidden="true"></i> x <%= future[i].users %>
                                    </span>
                                </div>
                            </a>
                            <% } %>
                        </div>
                    <% } %>

                    <% if(ended.length){ %>
                        <h5 class = "list-group-item grey-back">
                            <i class="fa fa-hourglass-end" aria-hidden="true"></i> Past Contests
                        </h5>
                        <div class = "list-group">
                            <% for(var i=0; i<ended.length; i++){ %>

                            <a href = "/contest/<%= ended[i].id %>" class = "list-group-item clearfix">
                                <div class="pull-left contest-list">
                                    <h5 class = "list-group-item-heading"><%= ended[i].title %></h5>
                                    <p class = "list-group-item-text">

                                            <%= moment(ended[i].begin).from() %>

                                    </p>
                                </div>
                                <div class="pull-right">
                                    <span class = "badge">
                                        <i class="fa fa-user" aria-hidden="true"></i> x <%= ended[i].users %>
                                    </span>
                                </div>
                            </a>

                            <% } %>
                        </div>
                    <% } %>

                </div>

        </div>

        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Contest Hosting</h3>
                    <p>Want to host a contest on JUSTOJ for your organization or university?</p>
                    <a href="/contest/host" class="btn btn-sm btn-primary">Click Me!</a>
                </div>
            </div>
        </div>

    </div>

</div>

<!-- footer -->
<% include ../templates/footer.ejs %>

</body>
</html>