<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JUST Online Judge</title>

    <script type="text/javascript" src="javascripts/jquery-2.1.4.min.js"></script>

    <link rel="stylesheet" href="stylesheets/style.css">

    <link rel="stylesheet" href="/font-awesome-4.5.0/css/font-awesome.min.css" >

    <link rel="stylesheet" href="bootstrap/css/bootstrap.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="bootstrap/css/bootstrap-theme.css">
    <!-- Latest compiled and minified JavaScript -->
    <script type="text/javascript" src="bootstrap/js/bootstrap.min.js"></script>

</head>
<body>


<!-- header and menu -->
<% include ../templates/header.ejs %>
<% if(!isUser){ %>
<li><a href="/login"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> LOGIN</a></li>
<li><a href="/resister"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> RESISTER</a></li>
<% } else{ %>
<li><a href="/logout"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> LOGOUT</a></li>
<li><a href="/#"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%= user.username %> </a></li>
<% } %>
<% include ../templates/headerend.ejs %>


<!-- Main Content -->
<div class="container c-h" >

    <div class="row">

        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-body">

                    <h4>Contests</h4>

                    <% if(running.length){ %>
                        <h5 class = "list-group-item grey-back">
                            <i class="fa fa-hourglass-half" aria-hidden="true"></i> Running Contests
                        </h5>
                        <div class = "list-group">
                            <% for(var i=0; i<running.length; i++){ %>
                                <a href = "/contest/<%= running[i].id %>" class = "list-group-item clearfix">
                                    <div class="pull-left">
                                        <h4 class = "list-group-item-heading"><%= running[i].title %></h4>
                                        <p class = "list-group-item-text">

                                                Ends <%= moment(running[i].end).from() %>

                                        </p>
                                    </div>
                                    <div class="pull-right">
                                        <span class = "badge">
                                            <i class="fa fa-user" aria-hidden="true">
                                                x <%= running[i].users %>
                                            </i>
                                        </span>
                                    </div>
                                </a>
                            <% } %>
                        </div>
                    <% } %>

                    <% if(future.length){ %>
                        <h5 class = "list-group-item grey-back">
                            <i class="fa fa-hourglass-o" aria-hidden="true"></i> Future Contests
                        </h5>
                        <div class = "list-group">
                            <% for(var i=0; i<future.length; i++){ %>
                            <a href = "/contest/<%= future[i].id %>" class = "list-group-item clearfix">
                                <div class="pull-left">
                                    <h4 class = "list-group-item-heading"><%= future[i].title %></h4>
                                    <p class = "list-group-item-text">

                                            Starts <%= moment(future[i].begin).from() %>

                                    </p>
                                </div>
                                <div class="pull-right">
                                    <span class = "badge">
                                        <i class="fa fa-user" aria-hidden="true">
                                            x <%= future[i].users %>
                                        </i>
                                    </span>
                                </div>
                            </a>
                            <% } %>
                        </div>
                    <% } %>

                    <% if(ended.length){ %>
                        <h5 class = "list-group-item grey-back">
                            <i class="fa fa-hourglass-end" aria-hidden="true"></i> Past Contests
                        </h5>
                        <div class = "list-group">
                            <% for(var i=0; i<ended.length; i++){ %>

                            <a href = "/contest/<%= ended[i].id %>" class = "list-group-item clearfix">
                                <div class="pull-left">
                                    <h4 class = "list-group-item-heading"><%= ended[i].title %></h4>
                                    <p class = "list-group-item-text">

                                            <%= moment(ended[i].begin).from() %>

                                    </p>
                                </div>
                                <div class="pull-right">
                                    <span class = "badge">
                                        <i class="fa fa-user" aria-hidden="true">
                                            x <%= ended[i].users %>
                                        </i>
                                    </span>
                                </div>
                            </a>

                            <% } %>
                        </div>
                    <% } %>

                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Contest Hosting</h3>
                    <p>Want to host a contest on JUSTOJ for your organization or university?</p>
                    <a href="/contest/host" class="btn btn-sm btn-primary">Click Me!</a>
                </div>
            </div>
        </div>

    </div>

</div>

<!-- footer -->
<% include ../templates/footer.ejs %>

</body>
</html>