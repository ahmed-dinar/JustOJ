<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JUST Online Judge</title>

    <% include ../templates/head.ejs %>

</head>
<body>


<!-- header and menu -->
<% include ../templates/header2.ejs %>


<!-- Main Content -->
<div class="content container c-h" >
    <div class="row">

        <div class="col-md-9">

            <div class="panel panel-default">
                <div class="panel-heading"><i class="fa fa-hourglass-half" aria-hidden="true"></i> Running Contests</div>

                <% if(running.length){ %>


                <table class="table table-responsive table-contest-list">

                    <tbody>

                    <% for(var i=0; i<running.length; i++){ %>

                    <tr>
                        <td class="col-md-8">
                            <a href = "/contests/<%= running[i].id %>/info" >
                                <%= running[i].title %>
                            </a>
                        </td>
                        <td class="col-md-3">
                            Ends <%= moment(running[i].end).from() %>
                        </td>
                        <td class="col-md-1">
                            <span class = "badge badge-info">
                                <i class="fa fa-user" aria-hidden="true"></i> x <%= running[i].users %>
                            </span>
                        </td>
                    </tr>

                    <% } %>

                    </tbody>
                </table>

                <% }else{ %>
                <div class="panel-body text-center">
                    <h5 class="help-block">No running contest found</h5>
                </div>
                <% } %>
            </div>


            <div class="panel panel-default">
                <div class="panel-heading"><i class="fa fa-hourglass-o" aria-hidden="true"></i> Future Contests</div>
            <% if(future.length){ %>

            <table class="table table-responsive table-contest-list">
                <tbody>

                <% for(var i=0; i<future.length; i++){ %>

                <tr>

                    <td class="col-md-8">
                        <a href = "/contests/<%= future[i].id %>/info">
                            <%= future[i].title %>
                        </a>
                    </td>
                    <td class="col-md-3">
                        Starts <%= moment(future[i].begin).from() %>
                    </td>
                    <td class="col-md-1">
                            <span class = "badge">
                                <i class="fa fa-user" aria-hidden="true"></i> x <%= future[i].users %>
                            </span>
                    </td>
                </tr>

                <% } %>

                </tbody>
            </table>

            <% }else{ %>
                <div class="panel-body text-center">
                    <h5 class="help-block">No upcoming contest found</h5>
                </div>
            <% } %>
            </div>




            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-hourglass-end" aria-hidden="true"></i> Past Contests
                    <span class="pull-right">
                        <a class="btn btn-xs btn-default" href="/contests/past">View All</a>
                    </span>
                </div>
            <% if(ended.length){ %>

                <table class="table table-responsive table-contest-list">
                    <tbody>

                <% for(var i=0; i<ended.length; i++){ %>

                <tr>
                    <td class="col-md-8">
                        <a href = "/contests/<%= ended[i].id %>/info">
                            <%= ended[i].title %>
                        </a>
                    </td>
                    <td class="col-md-3">
                        Ended <%= moment(ended[i].begin).from() %>
                    </td>
                    <td class="col-md-1">
                            <span class = "badge">
                                <i class="fa fa-user" aria-hidden="true"></i> x <%= ended[i].users %>
                            </span>
                    </td>
                </tr>


                <% } %>

                    </tbody>
                </table>

            <% }else{ %>
                <div class="panel-body text-center">
                    <h5 class="help-block">No past contest found</h5>
                </div>
            <% } %>
            </div>


        </div>



        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Contest Hosting</h3>
                    <p>Want to host a contest on JUSTOJ for your organization or university?</p>
                    <a href="/contests/host" class="btn btn-sm btn-primary">Click Here!</a>
                </div>
            </div>
        </div>


    </div>



</div>



<!-- footer -->
<% include ../templates/footer.ejs %>

</body>
</html>