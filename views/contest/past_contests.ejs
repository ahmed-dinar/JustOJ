<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JUST Online Judge</title>

    <% include ../templates/head.ejs %>

</head>
<body>


<!-- header and menu -->
<% include ../templates/header2.ejs %>


<!-- Main Content -->
<div class="content container c-h" >
    <div class="row">
        <div class="col-md-9 nopadding">

            <div class="panel panel-default">
                <div class="panel-heading">
                    PREVIOUS CONTESTS
                </div>
                <% if(ended.length){ %>

                <table class="table">

                    <tbody>


                    <% for(var i=0; i<ended.length; i++){ %>

                    <tr>

                        <td style="width: 68%">
                            <a href = "/contests/<%= ended[i].id %>" style="font-size: 15px; margin-left: 10px;">
                                <%= ended[i].title %>
                            </a>
                        </td>
                        <td style="width: 30%">
                            Ended <%= moment(ended[i].begin).from() %>
                        </td>
                        <td style="width: 2%">
                            <span class = "badge">
                                <i class="fa fa-user" aria-hidden="true"></i> x <%= ended[i].users %>
                            </span>
                        </td>
                    </tr>

                    <% } %>

                    </tbody>
                </table>

                <% } %>



            </div>

            <% include ../templates/pagination.ejs %>

        </div>



        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Contest Hosting</h3>
                    <p>Want to host a contest on JUSTOJ for your organization or university?</p>
                    <a href="/contests/host" class="btn btn-sm btn-primary">Click Here!</a>
                </div>
            </div>
        </div>


    </div>



</div>



<!-- footer -->
<% include ../templates/footer.ejs %>

</body>
</html>