<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JUST Online Judge</title>

    <% include ../templates/head.ejs %>

</head>
<body>

<!-- header and menu -->
<% include ../templates/header.ejs %>


<!-- Main Content -->
<div class="container c-h">

    <div class="row">

        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>Problems</h4>
                </div>

                <!-- problem list -->
                <table class="table">
                    <thead>
                    <tr>
                        <th style="padding-left: 15px;">Title</th>
                        <th>Difficulty</th>
                        <th title="Total Submissions / Accepted">Stat.</th>
                    </tr>
                    </thead>
                    <tbody>

                    <% for(var i=0; i<problems.length; i++){ %>
                    <tr>
                        <td class="ellips" style="max-width: 100px;padding-left: 15px;">
                            <a href="problems/JOP0<%= problems[i].id %>" ><b><%= problems[i].title %></b></a>
                        </td>

                        <td class="col-md-1">
                                            <span class="label label-default">
                                                <%= problems[i].difficulty %>
                                            </span>
                        </td>

                        <td class="col-md-1">
                                            <span class="label label-info">
                                                <%= problems[i].submissions %> / <%= problems[i].solved %>
                                            </span>
                        </td>
                    </tr>
                    <% } %>

                    </tbody>

                </table>



                <hr class="last-border">


                <% include ../templates/pagination.ejs %>

            </div>
        </div>



    </div>

</div>

<!-- footer -->
<% include ../templates/footer.ejs %>

</body>
</html>