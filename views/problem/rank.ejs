<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>JUST Online Judge</title>

    <% include ../templates/head.ejs %>

</head>
<body>


<!-- header and menu -->
<% include ../templates/header.ejs %>



<!-- Main Content -->
<div class="container" style="min-height: 550px;">

    <div class="row">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-body">

                    <h4>Problem: <a href="/problems/JOP0<%= pid %>"><%= pName %></a></h4>

                    <!-- problem list -->
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Rank</th>
                            <th>User</th>
                            <th>Date</th>
                            <th>Language</th>
                            <th>CPU</th>
                            <th>Memory</th>
                        </tr>
                        </thead>
                        <tbody>

                        <% for(var i=0; i<rank.length; i++){ %>
                        <tr>
                            <td><%= pagination.offset() + i + 1 %></td>
                            <td><a href="#"><%= rank[i].username %></a></td>
                            <td title="<%= rank[i].submittime %>"><%= moment(rank[i].submittime).from() %></td>
                            <td><%= langNames[rank[i].language] %></td>
                            <td><%= parseFloat(rank[i].cpu/1000.0).toFixed(2) %>s</td>
                            <td><%= rank[i].memory %>KB</td>
                        </tr>
                        <% } %>

                        </tbody>
                    </table>





                    <!-- pagination  -->
                    <nav class="text-center">
                        <ul class="pagination">


                            <% if( pagination.hasPrevPage() ){ %>
                            <li>
                                <a href="<%= locals.site.url %>ranks/p/<%= pid %>?page=<%= pagination.prevPage() %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <% } %>


                            <% for(var i=0; i<pagination.totalPages(); i++){ %>

                            <% if( pagination.cur_page == i+1 ){ %>
                            <li class="active">
                                <% }else{ %>
                            <li>
                                <% } %>

                                <a href="<%= locals.site.url %>ranks/p/<%= pid %>?page=<%= i+1 %>">
                                    <%= i+1 %>
                                </a>
                            </li>
                            <% } %>

                            <% if( pagination.hasNextPage() ){ %>
                            <li>
                                <a href="<%= locals.site.url %>ranks/p/<%= pid %>?page=<%= pagination.nextPage() %>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            <% } %>

                        </ul>
                    </nav>
                    <!-- end pagination -->


                </div>
            </div>
        </div>
    </div>

</div>

<!-- footer -->
<% include ../templates/footer.ejs %>

</body>
</html>